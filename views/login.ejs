<%- include("partials/header") %>
    <body class="home">
        <div class="jumbotron ground home">
            <p style="float: right;"><a href="/">HOME</a></p>
            <br>
            <div><h1 id="textHead">TRAIN</h1></div>
            <div><h1 id="textHead">TO</h1></div>
            <div><h1 id="textHead">ENGLISH</h1></div>
            <p>
            <form style="width: 40%;" action = '/login' method = 'POST'>
                <div class="form-group">
                  <label class="textColur" for="userName">USERNAME</label>
                  <input type="text" class="form-control" name="username">
                </div>
                <div class="form-group">
                  <label class="textColur" for="password">PASSWORD</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <div class='container' style="text-align: center;">
                  <% if (error && error.length > 0) { %>
                    <div class="alert alert-danger" role="alert">
                      <%= error %>
                    </div>
                  <% } %>
                  <% if (success && success.length > 0) { %>
                    <div class="alert alert-success" role="alert">
                      <%= success %>
                    </div>
                  <% } %>
                </div>
                <center><button style="background: #a48ed2;border-color: white;" type="submit" class="btn btn-primary">LOGIN</button></center>
            </form>
            </p>
        </div>
<%- include("partials/footer") %>