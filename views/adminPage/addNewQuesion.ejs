<%- include("../partials/header") %>
<body class="home">
    <div class="jumbotron ground home">
        <div class='container' style="text-align: center;">
            <% if (error && error.length > 0) { %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>
            <% if (success && success.length > 0) { %>
                <div class="alert alert-success" role="alert">
                    <%= success %>
                </div>
            <% } %>
        </div>
        <h2 id="textHead">Add new quesions.</h2><hr>
        <div class='container'>
            <form class="textColur" style="width: 50%;" action="/admin/addNewQuesion/<%= map_id%>" method="POST">
                <div class="form-group">
                    <label style="display: inline;" class="textColur" for="Quesion">Quesion</label>
                    <textarea style="width: 50%;" class="form-control" name="Quesion" rows="1" cols="100" required></textarea>
                    <input class="form-control" type="text" name="maxValue" hidden value="<%= maxValue%>">
                </div>
                <div class="form-grop">
                    <label style="display: inline;" class="textColur" for="c1">choice 1</label>
                    <input style="display: inline;" class="form-control" type="text" name="c1" required>
                    <input style="display: inline;" class="form-control" type="radio" name="a" value="a1">
                </div>
                <div class="form-grop">
                    <label style="display: inline;" class="textColur" for="c2">choice 2</label>
                    <input style="display: inline;" class="form-control" type="text" name="c2" required>
                    <input style="display: inline;" class="form-control" type="radio" name="a" value="a2">
                </div>
                <div class="form-grop">
                    <label style="display: inline;" class="textColur" for="c3">choice 3</label>
                    <input style="display: inline;" class="form-control" type="text" name="c3" required>
                    <input style="display: inline;" class="form-control" type="radio" name="a" value="a3">
                </div>
                <div class="form-grop">
                    <label style="display: inline;" class="textColur" for="c4">choice 4</label>
                    <input style="display: inline;" class="form-control" type="text" name="c4" required>
                    <input style="display: inline;" class="form-control" type="radio" name="a" value="a4">
                </div>
                <div align="center">
                    <button style="background: #a48ed2;border-color: white; display: inline;" type="submit" class="btn btn-warning">ADD</button>
                    <a href="/admin/addNewQuesion" class="btn btn-primary" style="display: inline; background: #a48ed2;border-color: white;">CANCEL</a>
                </div>
            </form>
            <hr>
        </div>
    </div>
<%- include("../partials/footer") %>